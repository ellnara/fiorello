@model IEnumerable<Slide>
    @{
    ViewData["Title"] = "Index";
    int count = 1;
    }

    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Sliders</h4>
                    <a class="btn btn-success" asp-action="Create">Create Slidery</a>
                    <div class="table-responsive pt-3">
                        <table class="table table-dark">
                            <thead>
                                <tr>
                                    <th>
                                        #
                                    </th>
                                    <th>
                                        Image
                                    </th>
                                    <th>
                                        Settings
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var image in Model)
                            {
                                <tr>
                                    <td>
                                        @count
                                    </td>
                                    <td>
                                        <img src="~/img/@image.Url" />
                                    </td>
                                    <td>
                                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@image.Id">
                                            <i class="mdi mdi-delete-forever"></i>
                                        </a>
                                        <a class="btn btn-sm btn-warning" asp-action="Update" asp-route-id="@image.Url">
                                            <i class="mdi mdi-border-color"></i>
                                        </a>
                                    </td>
                                </tr>
                                count++;
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
